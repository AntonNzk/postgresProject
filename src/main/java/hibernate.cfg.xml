<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
        <property name="hibernate.connection.username">postgre</property>
        <property name="hibernate.connection.password">postgre</property>
        <property name="hibernate.connection.url">jdbc:postgresql://127.0.0.1:5433/postgres</property>
        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">1</property>
    </session-factory>
</hibernate-configuration>